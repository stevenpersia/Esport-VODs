<% @title="- Liste des teams" %>

<p id="notice"><%= notice %></p>

<h2>Teams</h2> <%= link_to 'New Team', new_team_path %>

<div class="table-responsive">
<table class="table table-striped table-hover table-sm">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><img src="<%= team.logo %>" widht="16" height="16"> <%= team.name %></td>
        <td><%= link_to 'Voir', team %></td>
        <td><%= link_to 'Modifier', edit_team_path(team) %></td>
        <td><%= link_to 'Supprimer', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
