<% @title="- Liste des matchs" %>

<p id="notice"><%= notice %></p>

<h2>Matches</h2> <%= link_to 'New Match', new_match_path %>

<div class="table-responsive">
<table class="table table-striped table-hover table-sm">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Day</th>
      <th scope="col">Group</th>
      <th scope="col">Bestof</th>
      <th scope="col">Team 1</th>
      <th scope="col">Team 2</th>
      <th scope="col">Event</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.name %></td>
        <td><%= match.day %></td>
        <td><%= match.group %></td>
        <td><%= match.bestof %></td>
        <td><%= match.team1 %></td>
        <td><%= match.team2 %></td>
        <td><%= match.event_id %></td>
        <td><%= link_to 'Voir', match %></td>
        <td><%= link_to 'Modifier', edit_match_path(match) %></td>
        <td><%= link_to 'Supprimer', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
