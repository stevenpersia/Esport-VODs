<% @title="- Liste des évènements" %>

<p id="notice"><%= notice %></p>

<h2>Events</h2> <%= link_to 'New Event', new_event_path %>

<div class="table-responsive">
<table class="table table-striped table-hover table-sm">
  <thead class="thead-light">
    <tr>
      <th scope="col"></th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Start</th>
      <th scope="col">End</th>
      <th scope="col">Subtitle</th>
      <th scope="col">Category</th>
      <th scope="col">Favoris</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><img src="<%= event.image %>" height="80"></td>
        <td><img src="<%= event.logo %>" height="16"> <%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.start.strftime("%e/%m/%Y") %></td>
        <td><%= event.end.strftime("%e/%m/%Y") %></td>
        <td><%= event.subtitle %></td>
        <td><%= event.category_id %></td>
        <td><%= event.fav %></td>
        <td><%= link_to 'Voir', event %></td>
        <td><%= link_to 'Modifier', edit_event_path(event) %></td>
        <td><%= link_to 'Supprimer', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
