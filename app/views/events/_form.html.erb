<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group mt-4">
    <%= form.text_field :name, {:class => 'form-control form-control-lg', :placeholder => "Nom de l'évènement", :required => true }  %>
    </div>

    <div class="form-group">
    <%= form.text_field :subtitle, {:class => 'form-control form-control-lg', :placeholder => "Sous titre de l'évènement", :required => true } %>
    </div>

    <div class="input-group mb-3">
    <div class="input-group-prepend">
      <label class="input-group-text">Catégorie</label>
    </div>
    <%= form.select :category_id, @categories, {}, {required: true, class: 'form-control form-control-lg custom-select'} %>
    </div>

    <div class="form-group">
    <%= form.text_area :description, {:class => 'form-control form-control-lg', :placeholder => "Description de l'évènement", :required => true }  %>
    </div>

    <div class="input-group mb-3">
    <div class="input-group-prepend">
      <label class="input-group-text">Logo</label>
    </div>
    <%= form.text_field :logo, {:class => 'form-control form-control-lg', :placeholder => "URL du logo de l'évènement", :required => true } %>
    </div>

    <div class="input-group mb-5">
    <div class="input-group-prepend">
      <label class="input-group-text">Image</label>
    </div>
    <%= form.text_field :image, {:class => 'form-control form-control-lg', :placeholder => "URL de l'image de l'évènement", :required => true } %>
    </div>

    <label>Type d'évènement</label>
    <div class="form-check mb-2">
      <%= form.check_box :event_classic, {:class => 'form-check-input'} %>
      <label class="form-check-label">Classique</label>
      <small class="form-text text-muted">
      Classique : Team vs Team ou Joueur vs Joueur
      </small>
    </div>
    <div class="form-check mb-2">
      <%= form.check_box :event_br, {:class => 'form-check-input'} %>
      <label class="form-check-label">Battle Royale</label>
      <small class="form-text text-muted">
      Batte Royale : Chacun pour soi
      </small>
    </div>
    <div class="form-check mb-5">
      <%= form.check_box :event_special, {:class => 'form-check-input'} %>
      <label class="form-check-label">Special</label>
      <small class="form-text text-muted">
      Special : Aucune information affichée
      </small>
    </div>

    <div class="form-group mb-3">
      <label>Date de début et de fin</label><br>
      <%= form.date_select :start, {:class => 'form-control'} %>
    </div>
    <div class="form-group mb-5">
      <%= form.date_select :end, {:class => 'form-control'} %>
    </div>

    <label>Evènement en favoris ?</label>
    <div class="form-check mb-4">
      <%= form.check_box :fav, {:class => 'form-check-input'} %>
      <label class="form-check-label">Mettre dans nos favoris</label>
      <small class="form-text text-muted">
      Cocher pour faire apparaître l'évènement dans la page Nos coups de coeur.
      </small>
    </div>

    <%= form.submit 'Enregistrer', :class => 'btn btn-primary hand btn-lg btn-block mb-3' %>
<% end %>
