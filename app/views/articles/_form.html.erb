<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mt-4">
  <%= form.text_field :title, {:class => 'form-control form-control-lg', :placeholder => "Titre de l'article", :required => true }  %>
  </div>

  <div class="form-group">
  <%= form.text_area :content, {:class => 'form-control form-control-lg', :placeholder => "Contenu de l'article", :required => true }  %>
  </div>

  <div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text">Lien</label>
  </div>
  <%= form.text_field :link, {:class => 'form-control form-control-lg', :placeholder => "URL de l'évènement, URL externe, ...", :required => true } %>
  </div>

  <div class="input-group mb-4">
  <div class="input-group-prepend">
    <label class="input-group-text">Image</label>
  </div>
  <%= form.text_field :image, {:class => 'form-control form-control-lg', :placeholder => "URL de l'image de l'article", :required => true } %>
  </div>

  <%= form.submit 'Enregistrer', :class => 'btn btn-primary hand btn-lg btn-block mb-3' %>
<% end %>
