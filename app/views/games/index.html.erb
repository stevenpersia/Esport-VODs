<% @title="- Liste des games" %>

<p id="notice"><%= notice %></p>

<h2>Games</h2> <%= link_to 'New Game', new_game_path %>

<div class="table-responsive">
<table class="table table-striped table-hover table-sm">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Match</th>
      <th scope="col">Streamer</th>
      <th colspan="3">Accueil</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.match_id %></td>
        <td><a href="<%= game.urlstream %>" target="_blank"><%= game.namestream %></a></td>
        <td><%= link_to 'Voir', game %></td>
        <td><%= link_to 'Modifier', edit_game_path(game) %></td>
        <td><%= link_to 'Supprimer', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
